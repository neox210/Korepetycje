<div id='calendar'></div>

@section scripts{
    <script>
        $(document).ready(function () {

            FetchEventAndRenderCalendar();

            function FetchEventAndRenderCalendar() {

                var events = [];

                $.ajax({
                    type: "GET",
                    url: "/api/StudentEvents/",
                    success: function (data) {
                        $.each(data, function (i, v) {
                            events.push({
                                id: v.Id,
                                studentId: v.StudentId,
                                title: v.Subject,
                                description: v.Description,
                                start: moment(v.Start),
                                end: v.End != null ? moment(v.End) : null,
                                color: v.ThemeColor,
                                allDay: v.IsFullDay
                            });
                        })
                        console.log(events);
                        GenerateCalender(events);
                    },
                    error: function (error) {
                        alert('wystąpił błąd przy wczytywaniu zdarzeń kalendarza');
                    }
                })

                function GenerateCalender(events) {

                    $('#calendar').fullCalendar('destroy');
                    //$('#calendar').fullCalendar('render');
                    $('#calendar').fullCalendar({
                        locale: 'pl',
                        header: {
                            center: 'agendaDay,agendaWeek,month',
                        },
                        events: events,
                        slotDuration: '00:15:00',
                        snapDuration: '00:15:00',
                        minTime: '07:00:00',
                        maxTime: "22:00:00",
                        defaultView: 'agendaWeek',

                        selectable: true,
                        select: function (start, end) {
                            selectedEvent = {
                                Id: 0,
                                title: '',
                                description: '',
                                start: start,
                                end: end,
                                allDay: false,
                                color: ''
                            };
                            openAddEditForm();
                            $('#calendar').fullCalendar('unselect');
                        },

                        editable: true,
                        eventStartEditable: false,
                        eventDurationEditable: false,


                        eventClick: function (calEvent, jsEvent, view) {
                            selectedEvent = calEvent;
                            $('#myModal #eventTitle').text(calEvent.title);
                            var $description = $('<div/>');
                            $description.append($('<p/>').html('<b>Start:</b>' + calEvent.start.format("YYYY-MM-DD HH:mm")));
                            if (calEvent.end != null) {
                                $description.append($('<p/>').html('<b>End:</b>' + calEvent.end.format("YYYY-MM-DD HH:mm")));
                            }
                            $description.append($('<p/>').html('<b>Description:</b>' + calEvent.description));
                            $('#myModal #pDetails').empty().html($description);

                            $('#myModal').modal();
                        }

                    })
                }
            }
            
        })
    </script>
    }
