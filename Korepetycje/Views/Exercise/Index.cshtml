@model IEnumerable<Korepetycje.Models.Exercises>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SchoolList.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SchoolClassList.ClassNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Section.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Topic)
        </th>       
        <th>
            @Html.DisplayNameFor(model => model.FotoPath)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.SchoolList.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SchoolClassList.ClassNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Section.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Topic)
        </td>
        <td>
            @if (item.FotoPath != null)
            {
                @Html.DisplayFor(modelItem => item.FotoPath)
            }
            else
            {
                @Html.ActionLink("Dodaj Zdjęcie", "Edit", new { id = item.Id })
            }

        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
